<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewConcurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:gravity="center"
            />

    </LinearLayout>

    <GridView
        android:id="@+id/gridViewResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:numColumns="5"
        android:gravity="center">
    </GridView>

    <LinearLayout
        android:id="@+id/linearLayoutEstimativa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewEstimDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="start"

            />

        <TextView
            android:id="@+id/textViewEstimValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="R$ 999.999.999,99"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="end"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutAcumulado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAcumDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="start"

            />

        <TextView
            android:id="@+id/textViewAcumValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="R$ 999.999.999,99"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutGanhadores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_margin="10dp"
        android:orientation="vertical">


    </LinearLayout>
    <!--<WebView-->
        <!--android:id="@+id/webView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

</LinearLayout>